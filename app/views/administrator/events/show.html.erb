
<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= @event.title %></h1>
  <% unless @event.photo.url.nil? %>
    <%= image_tag @event.photo.url, class: 'img-fluid' %>
  <% end %>
</div>
<div class="clr"></div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Register Now
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Register Now</h4>
      </div>
      <%= simple_form_for @guest, url: event_guests_path(@event) do |f| %>
        <div class="modal-body">
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :number_of_guest %>       
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit "Register Now", class: 'btn btn-primary' %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

<h1>Guests</h1>